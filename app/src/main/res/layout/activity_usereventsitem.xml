<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/userdateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="04/01/2022"
        app:layout_constraintBottom_toBottomOf="@+id/usertimeTextView"
        app:layout_constraintEnd_toStartOf="@+id/usertimeTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/usertimeTextView" />

    <View
        android:id="@+id/userdivider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userbundleTextView" />

    <TextView
        android:id="@+id/usertimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="5:00PM"
        app:layout_constraintEnd_toStartOf="@+id/usertotalTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/userdateTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userbundleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1. Santa Statue"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/usereventtypetextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/userdateTextView"
        app:layout_constraintTop_toBottomOf="@+id/usertimeTextView" />

    <TextView
        android:id="@+id/usertotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        app:layout_constraintBottom_toBottomOf="@+id/usertimeTextView"
        app:layout_constraintEnd_toStartOf="@+id/usereventtypetextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/usertimeTextView"
        app:layout_constraintTop_toTopOf="@+id/usertimeTextView" />

    <TextView
        android:id="@+id/usereventtypetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Installation"
        app:layout_constraintBottom_toBottomOf="@+id/usertotalTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/usertotalTextView"
        app:layout_constraintTop_toTopOf="@+id/usertotalTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>